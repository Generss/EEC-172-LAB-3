    int current_dialogue_position = 0;

    const char *dialogues[] = {
        "You enter a dungeon",
        "you fall in a trap",
        "there is a goblin",
        "You kill it",
        "It stabs you"
    };
    const char *choice1[] = {
        "enter door 1",
        "you lose",
        "Attack!",
        "You win",
        "You lose"
    };

    const char *choice2[] = {
        "enter door 2",
        "you lose",
        "Run!",
        "You win!",
        "You lose"
    };
    int destination[5][2] = {{2,1},{0,0},{3,4},{0,0},{0,0}};
    int art[5] = {0,2,1,3,2};

    while(1) {
        drawDialogueChoices(dialogues[current_dialogue_position], choice1[current_dialogue_position], choice2[current_dialogue_position]);
        int choice_not_made = 1;

        int artChoice = art[current_dialogue_position];

              if(artChoice == 0) {
                  drawPixelArt( door, 30, 30, 50, 25);

              }
              if(artChoice == 1) {
                          drawPixelArt(goblin, 30, 30, 50, 25);

              }
              if(artChoice == 2) {
                          drawPixelArt(frown, 30, 30, 50, 25);

              }
              if(artChoice == 3) {
                            drawPixelArt(happy,30,30,50,25);

              }
        while(choice_not_made) {

            if(GPIOPinRead(GPIOA1_BASE, 0x20)) {
                current_dialogue_position = destination[current_dialogue_position][0];
                choice_not_made = 0;

            }
            if(GPIOPinRead(GPIOA2_BASE, 0x40)) {
                current_dialogue_position = destination[current_dialogue_position][1];
                choice_not_made = 0;
            }
        }
        MAP_UtilsDelay(10000);
    }

}

void runOledTest() {
    while(1) {
        helloworld();
        MAP_UtilsDelay(20000000);
        alphabet();
        MAP_UtilsDelay(10000);
        horizontallines();
        MAP_UtilsDelay(10000);
        verticallines();
        MAP_UtilsDelay(10000);
        testlines(RED);
        MAP_UtilsDelay(1000);
        testfastlines(BLUE, RED);
        MAP_UtilsDelay(10000);
        testdrawrects(BLUE);
        MAP_UtilsDelay(10000);
        testfillrects(BLUE, RED);
        MAP_UtilsDelay(1000);
        testdrawcircles(8, GREEN);
        MAP_UtilsDelay(1000);
        testfillcircles(8, GREEN);
        MAP_UtilsDelay(1000);
        testtriangles();
        MAP_UtilsDelay(10000);
        testroundrects();
        MAP_UtilsDelay(1000);
    }


}



